{
  "version": 2,
  "builds": [
    {
      "src": "FarmFund/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "FarmFund/wsgi.py"
    }
  ],
  "build": {
    "env": {
      "DJANGO_SETTINGS_MODULE": "FarmFund.settings"
    },
    "commands": [
      "python manage.py collectstatic --noinput"
    ]
  }
}
